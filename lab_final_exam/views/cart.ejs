<style>
.cart-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 80px 30px;
    background-color: white;
}

.cart-container h2 {
    font-family: "Bembo", Georgia, serif;
    font-size: 24px;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 60px;
    font-weight: normal;
    letter-spacing: 1px;
}

.cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 40px;
    font-family: "Helvetica", Georgia, serif;
}

.cart-table th {
    background-color: black;
    color: white;
    padding: 15px;
    text-align: left;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: normal;
}

.cart-table td {
    padding: 20px 15px;
    border-bottom: 1px solid #eee;
    font-size: 14px;
    vertical-align: middle;
}

.cart-table tr:hover {
    background-color: #f9f9f9;
}

.quantity-controls {
    display: flex;
    align-items: center;
    gap: 0;
    border: 1px solid #ddd;
    width: fit-content;
}

.quantity-btn {
    background-color: white;
    color: black;
    border: none;
    width: 35px;
    height: 35px;
    cursor: pointer;
    font-family: "Helvetica", Georgia, serif;
    font-size: 16px;
    font-weight: normal;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.quantity-btn:hover {
    background-color: black;
    color: white;
}

.quantity-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
}

.quantity-btn:disabled:hover {
    background-color: white;
    color: black;
}

.quantity-input {
    width: 50px;
    height: 35px;
    text-align: center;
    border: none;
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    font-family: "Helvetica", Georgia, serif;
    font-size: 14px;
    background-color: white;
}

.quantity-input:focus {
    outline: none;
    background-color: #f9f9f9;
}

.remove-btn {
    background-color: transparent;
    color: #999;
    border: 1px solid #ddd;
    padding: 8px 15px;
    cursor: pointer;
    font-family: "Helvetica", Georgia, serif;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}

.remove-btn:hover {
    background-color: black;
    color: white;
    border-color: black;
}

.cart-total {
    text-align: right;
    font-family: "Bembo", Georgia, serif;
    font-size: 18px;
    margin-bottom: 40px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.checkout-btn {
    display: block;
    width: 200px;
    margin: 0 auto;
    background-color: black;
    color: white;
    text-decoration: none;
    padding: 15px 30px;
    text-align: center;
    font-family: "Helvetica", Georgia, serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background-color 0.3s ease;
}

.checkout-btn:hover {
    background-color: #333;
}

.empty-cart {
    text-align: center;
    font-family: "Helvetica", Georgia, serif;
    font-size: 14px;
    color: #666;
    padding: 60px 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.continue-shopping {
    color: black;
    text-decoration: underline;
    font-family: "Helvetica", Georgia, serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: color 0.3s ease;
    margin-top: 20px;
    display: inline-block;
}

.continue-shopping:hover {
    color: #666;
}

@media (max-width: 768px) {
    .cart-container {
        padding: 60px 20px;
    }
    
    .cart-table th,
    .cart-table td {
        padding: 10px 8px;
        font-size: 12px;
    }
    
    .quantity-controls {
        transform: scale(0.9);
    }
    
    .quantity-btn {
        width: 30px;
        height: 30px;
        font-size: 14px;
    }
    
    .quantity-input {
        width: 40px;
        height: 30px;
    }
    
    .remove-btn {
        padding: 6px 10px;
        font-size: 10px;
    }
    
    .checkout-btn {
        width: 100%;
    }
}
</style>

<div class="cart-container">
    <h2>Your Cart</h2>
    
    <% if (!cart || cart.length === 0) { %>
        <div class="empty-cart">
            <p>Your cart is empty</p>
            <a href="/" class="continue-shopping">Continue Shopping</a>
        </div>
    <% } else { %>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% cart.forEach((item, index) => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td>
                            <div class="quantity-controls">
                                <!-- Decrease quantity -->
                                <form action="/update-cart" method="POST" style="display: inline;">
                                    <input type="hidden" name="index" value="<%= index %>">
                                    <input type="hidden" name="action" value="decrease">
                                    <button type="submit" class="quantity-btn" <%= item.quantity <= 1 ? 'disabled' : '' %>>âˆ’</button>
                                </form>
                                
                                <!-- Direct quantity input -->
                                <form action="/update-cart" method="POST" style="display: inline;" onchange="this.submit()">
                                    <input type="hidden" name="index" value="<%= index %>">
                                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="99" class="quantity-input">
                                </form>
                                
                                <!-- Increase quantity -->
                                <form action="/update-cart" method="POST" style="display: inline;">
                                    <input type="hidden" name="index" value="<%= index %>">
                                    <input type="hidden" name="action" value="increase">
                                    <button type="submit" class="quantity-btn">+</button>
                                </form>
                            </div>
                        </td>
                        <td>Rs. <%= item.price %></td>
                        <td>Rs. <%= item.price * item.quantity %></td>
                        <td>
                            <form action="/remove-from-cart" method="POST" style="display: inline;">
                                <input type="hidden" name="index" value="<%= index %>">
                                <button type="submit" class="remove-btn" onclick="return confirm('Remove this item from cart?')">Remove</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
        <p class="cart-total"><strong>Total: Rs. <%= total %></strong></p>
        <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit quantity form when input changes
    const quantityInputs = document.querySelectorAll('.quantity-input');
    quantityInputs.forEach(input => {
        input.addEventListener('change', function() {
            if (this.value < 1) this.value = 1;
            if (this.value > 99) this.value = 99;
            this.closest('form').submit();
        });
    });
});
</script>
