<style>
.checkout-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 80px 30px;
    background-color: white;
    min-height: 70vh;
}

.checkout-container h2 {
    font-family: "Bembo", Georgia, serif;
    font-size: 24px;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 60px;
    font-weight: normal;
    letter-spacing: 1px;
}

.checkout-form {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group label {
    font-family: "Helvetica", Georgia, serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
    color: #333;
}

.checkout-form input,
.checkout-form textarea {
    padding: 15px;
    border: 1px solid #ddd;
    background-color: white;
    font-family: "Helvetica", Georgia, serif;
    font-size: 14px;
    transition: border-color 0.3s ease;
    resize: vertical;
}

.checkout-form input:focus,
.checkout-form textarea:focus {
    outline: none;
    border-color: black;
}

.checkout-form input::placeholder,
.checkout-form textarea::placeholder {
    color: #999;
    font-size: 14px;
}

.checkout-form textarea {
    min-height: 100px;
    font-family: "Helvetica", Georgia, serif;
}

.checkout-btn {
    background-color: black;
    color: white;
    border: none;
    padding: 18px 30px;
    font-family: "Helvetica", Georgia, serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: 30px;
}

.checkout-btn:hover {
    background-color: #333;
}

.payment-info {
    background-color: #f9f9f9;
    padding: 20px;
    margin-bottom: 30px;
    text-align: center;
    font-family: "Helvetica", Georgia, serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #666;
}

@media (max-width: 768px) {
    .checkout-container {
        padding: 60px 20px;
        max-width: 100%;
    }
    
    .checkout-form {
        gap: 20px;
    }
}
</style>

<div class="checkout-container">
    <h2>Checkout</h2>
    
    <div class="payment-info">
        Cash on Delivery Available
    </div>
    
    <form action="/place-order" method="POST" class="checkout-form">
        <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your full name" required>
        </div>
        
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required>
        </div>
        
        <div class="form-group">
            <label for="address">Delivery Address</label>
            <textarea id="address" name="address" placeholder="Enter your complete delivery address" required></textarea>
        </div>

        <button type="submit" class="checkout-btn">Pay Later with Cash</button>
    </form>
</div>
